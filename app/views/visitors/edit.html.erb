<h1>Visitor Profile:</h1>

<p><%= form_for @visitor do |f| %></p>
  <% if @visitor.errors.any? %>
    <% @visitor.errors.full_messages.each do |message|%>
      <li><%= message %></li>
    <% end %>
  <% end %>

  <div class="fields">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>

  <div class="fields">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>

  <div class="fields">
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>
  <div class="fields">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="fields">
    <%= f.label :photo %><br/>
    <%= f.text_field :photo %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
