<h1>All Guides</h1>


<div class="guide-index-search">

  <%= render partial: "guides/guide_search"%>
  <%= form_tag guides_path, method: :get, authentication: false, id: 'search-form' do %>

    <%= label_tag :rate, "Rate", id: 'rate_label' %>
    <span>$20</span>
    <%= range_field_tag(:rate, 60, in: 20..100, step: 1) %>
    <span>$100</span>
    <%= collection_radio_buttons("", :category_id, Category.all, :id, :name) %>
  <% end %>

<% @guides.each do |guide| %>
 <%= link_to guide_path(guide) do %>
   <%= image_tag guide.photo %><br/>
   <%= guide.first_name %><%= guide.last_name %><br/>
   <%= guide.city %><br/>
   <%= guide.email %><br/>

   <%= button_to 'more info', guide_path(guide)%>

 <% end %>
<% end %>
