<h1>All Guides</h1>


<div class="guide-index-search">
  <%= form_tag guides_path, method: :get, authentication: false, id: 'search-form' do %>
  <%= label_tag :City %>
  <%= text_field_tag :city, params[:city]%>
  <%= label_tag "Language"%>
  <%= select_tag :language, options_from_collection_for_select(Language.all, "id", "lang") %>
  <%= label_tag "Rate" %>
  <%= range_field(:rate, method: :get, in: 1..100, step: 1) %>
  <%= collection_radio_buttons("", :category_id, Category.all, :id, :name) %>


  <%= submit_tag "Search" %>
  <% end %>
</div>

<% if guide_signed_in? %>
  <div>
    <%= link_to "Log out GUIDE", destroy_guide_session_path, method: :delete %>
  </div>
  <div>
    <%= link_to "edit profile GUIDE", edit_guide_registration_path, method: :get %>
  </div>
<% else %>
  <div>
    <%= link_to "Log in GUIDE", new_guide_session_path, method: :get %>
  </div>
  <div>
    <%= link_to "I forgot my password GUIDE", new_guide_password_path, method: :get %>
  </div>
  <div>
    <%= link_to "sign up GUIDE", new_guide_registration_path, method: :get %>
  </div>
<% end %>

