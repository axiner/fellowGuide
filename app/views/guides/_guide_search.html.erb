<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>jQuery UI Datepicker - Default functionality</title>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
  <link rel="stylesheet" href="/resources/demos/style.css">
  <script>
  $(function() {
    $( "#datepicker" ).datepicker();
  });
  </script>
</head>
<body>
  <div class="guide-index-search">

 <%= form_tag guides_path, method: :get, authentication: false, id: 'search-form' do %>
   <%= label_tag :city %>
   <%= text_field_tag :city, params[:city]%>
   <%= label_tag "Language"%>
   <%= select_tag :language_id, options_from_collection_for_select(Language.all, "id", "lang", params[:language_id]) %>
   <p>Date: <input type="text" id="datepicker"></p>
   <%= label_tag :rate, "Rate", id: 'rate_label' %>
<span>$20</span>
<%= range_field_tag(:rate, 60, in: 20..100, step: 1) %>
<span>$100</span>
<%= collection_radio_buttons("", :category_id, Category.all, :id, :name) %>
   <%= submit_tag "Search", class: "search_button" %>
 <% end %>



</body>


</html>
