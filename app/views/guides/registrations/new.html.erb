<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="fields">
    <%= f.label :photo %><br/>
    <%= f.file_field :photo %>
  </div>

  <div class="fields">
    <%= f.label :first_name %><br/>
    <%= f.text_field :first_name %>
  </div>

  <div class="fields">
    <%= f.label :last_name %><br/>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="fields">
    <%= f.label :city %><br/>
    <%= f.text_field :city %>
  </div>

  <div class="fields">
    <%= f.label :rate %><br/>
    <%= f.number_field :rate %>
  </div>

  <div class="fields">
    <%= f.label :transportation %><br/>
    <%= f.text_field :transportation %>
  </div>

  <div class="fields">
    <%= f.label :about_me %><br/>
    <%= f.text_area :description %>
  </div>

  <div class= "field">
  <%= f.label :languages, "For multiple selection, press command and click." %>
  <%= f.select :languages, options_from_collection_for_select(Language.all, "id", "lang"),{}, { :multiple => true, :size =>10 }  %>
</div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
