<% if @visitor.errors.any? %>
  <p> There are problems with your submission. Please edit the below: </p>
    <% @visitor.errors.full_messages.each do |message|%>
      <li><%= message %></li>
    <% end %>
<% end %>

<p><%= form_for @visitor do |f| %></p>
<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :email %><br>
  <%= f.text_field :email %>
</div>
<div class="field">
  <%= f.label :password %><br>
  <%= f.password_field :password %>
</div>
<div class="field">
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %>
</div>
<div class="action">
  <%= f.submit %>
</div>
<% end %>
